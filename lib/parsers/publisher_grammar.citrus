grammar PublisherGrammar
  include CommonGrammar

  rule publisher
    (publisher_place ':' s publisher_name) {
      {:publisher => {:name => publisher_name.to_s, :place => publisher_place.to_s}}
    }
  end

  rule publisher_place
    /[^a-z:\d][^:\d]{2,}/u
  end

  rule publisher_name
    .+
  end
end
