grammar Parsers::PublisherGrammar
  include Parsers::CommonGrammar

  rule publisher
    (publisher_place ':' s publisher_name) {
      {
        publisher: {
          name: capture(:publisher_name).to_s,
          place_name: capture(:publisher_place).to_s
        }
      }
    }
  end

  rule publisher_place
    /[^a-z:\d][^:\d]{2,}/
  end

  rule publisher_name
    .+
  end
end
