- @title = 'Name Field Test'

- content_for :head do
  = javascript_include_tag  'widgets/panel', 'widgets/form', 'widgets/ajax_form', 'widgets/nested_form',
                            'widgets/name_field',
                            'widget_tests/name_field_test'
  = stylesheet_link_tag 'taxa'

- content_for :page_contents do
  #results

  #taxon_form.nested_form.antcat_form.ui-corner-all.ui-widget-content.ui-widget
    %table
      %col{:width => '50px'}
      %col{:width => '*'}

      %tr
        %td= label_tag :name
        %td#test_name_field
          = render 'name_fields/panel', name_string: @name.try(:name)
          = hidden_field_tag 'test_name_field_value', ''

      %tr
        %td.buttons{colspan: 4}
          %button.ui-priority-primary.submit= previewize 'Save'
          %button.ui-priority-secondary.cancel Cancel
