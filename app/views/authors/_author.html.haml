-# Locals: author
.author
  - for author_name in author.names
    .author_name
      - references = author_name.references
      .name
        = author_name.name
        %span.count= Formatter.count_and_noun references, 'reference'
      - if references.present?
        .references
          - for reference in references
            .reference
              = ReferenceFormatter.format reference
