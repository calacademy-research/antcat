-#Locals: form, possible_homonym, show_elevate_to_species_button, add_taxon_button_text, show_convert_to_subspecies_button

.buttons_section
  %input{type: :hidden, name: 'possible_homonym', id: 'possible_homonym', value: possible_homonym ? 'true' : nil}
  .left_buttons
    - save_button_text = previewize possible_homonym ? 'Save homonym' : 'Save'
    = form.submit save_button_text, class: 'ui-priority-primary submit'
    %input{type: 'button', class: 'ui-priority-secondary cancel', value: 'Cancel'}
    = image_tag 'ui-anim_basic_16x16.gif', class: 'throbber'
  .right_buttons
    %input{type: :hidden, name: 'task_button_command', id: 'task_button_command'}
    - if add_taxon_button_text
      %input{type: 'button', class: 'ui-priority-primary', id: 'add_taxon', value: previewize(add_taxon_button_text)}
    - if show_convert_to_subspecies_button
      %input{type: 'button', class: 'ui-priority-primary', id: 'convert_to_subspecies', value: previewize('Convert to subspecies')}
    - if show_elevate_to_species_button
      %input{type: 'button', class: 'ui-priority-primary', id: 'elevate_to_species', value: previewize('Elevate to species')}
