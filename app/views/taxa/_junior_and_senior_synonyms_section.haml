-#Locals: taxon

.junior_and_senior_synonyms_section.section
  .section_header.ui-widget-header.ui-corner-top
    .left
      Synonyms
    .clear
  .section_contents.ui-dialog-content.ui-widget-content.ui-corner-bottom
    .container.left
      .junior_synonyms_section
        = render 'synonyms_section', taxon: taxon, title: 'Junior synonyms', association_selector: :synonyms_as_senior, synonym_field_selector: :junior_synonym
    .container.right
      .senior_synonyms_section
        = render 'synonyms_section', taxon: taxon, title: 'Senior synonyms', association_selector: :synonyms_as_junior, synonym_field_selector: :senior_synonym
    .clear
