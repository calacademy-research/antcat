-#Locals: taxon, title, synonyms

.synonyms_section

  .section_header.ui-widget-header.ui-corner-top
    .left= title
    .buttons.right
      %button.submit.add.ui-priority-primary.small_button Add
    .clear

  .section_contents.ui-dialog-content.ui-widget-content.ui-corner-bottom
    = render 'taxa/synonym_form', taxon: taxon
    - for synonym in synonyms
      .synonym_row
        =synonym[:name].html_safe
        %button.submit.ui-priority-primary.small_button.delete{'data-taxon-id' => taxon.id, 'data-synonym-id' => synonym[:id]} Delete
