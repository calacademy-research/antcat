-title "Move items"
-breadcrumb :move_items_to, @taxon, @to_taxon

-content_for :javascripts do
  =javascript_include_tag "controllers/taxa/move_items/select_checkboxes"

=form_with path: taxa_move_items_path do |f|
  =hidden_field_tag :to_taxon_id, @to_taxon.id
  .row
    .medium-6.columns
      %fieldset.fieldset
        %legend Move items from
        =@taxon.decorate.id_and_name_and_author_citation

    .medium-6.columns
      %fieldset.fieldset
        %legend to
        =@to_taxon.decorate.id_and_name_and_author_citation

  .row
    -# Move from.
    .medium-6.columns
      -if @taxon.history_items.empty?
        No history items.
      -else
        %table.history-items
          %caption
            History items
            .right
              =link_to "Select all", "#", id: "select-all-history-items", class: "btn-normal btn-tiny"
              =link_to "Unselect all", "#", id: "unselect-all-history-items", class: "btn-normal btn-tiny"
          %tbody
            -@taxon.history_items.each do |history_item|
              %tr
                %td=check_box_tag "history_item_ids[]", history_item.id
                %td
                  %small=Detax[history_item.to_taxt]

      -if @taxon.reference_sections.empty?
        No reference sections.
      -else
        %table.reference-sections
          %caption
            Reference sections
            .right
              =link_to "Select all", "#", id: "select-all-reference-sections", class: "btn-normal btn-tiny"
              =link_to "Unselect all", "#", id: "unselect-all-reference-sections", class: "btn-normal btn-tiny"
          %tbody
            -@taxon.reference_sections.each do |reference_section|
              %tr
                %td=check_box_tag "reference_section_ids[]", reference_section.id
                %td
                  =render 'reference_section', reference_section: reference_section

    -# Move to.
    .medium-6.columns
      -if @to_taxon.history_items.empty?
        No history items.
      -else
        %table
          %caption History items
          %tbody
            -@to_taxon.history_items.each do |history_item|
              %tr
                %td
                  %small=Detax[history_item.to_taxt]

      -if @to_taxon.reference_sections.empty?
        No reference sections.
      -else
        %table
          %caption Reference sections
          %tbody
            -@to_taxon.reference_sections.each do |reference_section|
              %tr
                %td
                  =render 'reference_section', reference_section: reference_section

  .row.margin-bottom
    .medium-12.columns
      .center-text
        =f.submit "Move selected items", class: "btn-saves"
