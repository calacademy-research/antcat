.taxt-editor.border.p-4.rounded.bg-white{data: { url: history_item_path(history_item) }}
  .taxt-presenter
    =Detax[history_item.to_taxt]

    %br

  .taxt-editor-editor.hidden
    %h6.font-bold.mb-4=history_item.type_label
    -# [grep:history_type].
    =render partial: "history_items/edit_templates/#{history_item.underscored_type}", locals: { history_item: history_item }

    =text_field_tag :edit_summary, nil, placeholder: "Edit summary (optional)", maxlength: Activity::EDIT_SUMMARY_MAX_LENGTH, class: 'edit-summary-js-hook !w-2/3 mb-4'

    %br

    %a.taxt-editor-history-item-save-button.btn-saves Save
    %a.taxt-editor-cancel-button.btn-neutral Cancel
    %a.taxt-editor-delete-button.btn-warning.ml-4 Delete

  .taxt-presenter.mt-2{class: "group/history-item-taxt-presenter"}
    %a.taxt-editor-edit-button.btn-neutral.btn-tiny.mr-4 Quick edit

    %small.font-bold.text-gray-500.mr-4=history_item.underscored_type

    %span.hidden{class: "group-hover/history-item-taxt-presenter:inline"}
      =link_to "Show", history_item_path(history_item), class: "btn-default btn-very-tiny"
      =link_to "Edit", edit_history_item_path(history_item, **current_page_redirect_back_url), class: "btn-default btn-very-tiny"
      =link_to "History", history_item_history_path(history_item), class: "btn-default btn-very-tiny"

      -if history_item.taxt_type?
        =link_to "Add item before this", new_protonym_history_item_path(history_item.protonym, position: history_item.position, **current_page_redirect_back_url), class: "btn-default btn-very-tiny"
      -if history_item.relational?
        =link_to "Add another", new_protonym_history_item_path(history_item.protonym, **history_item.decorate.params_for_add_another_of_same_type, **current_page_redirect_back_url), class: "btn-default btn-very-tiny"
