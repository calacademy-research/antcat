- reference ||= Reference.new
%div{:id => "reference_#{reference.id}", :class => css_class, 'data-taxt' => Taxt.to_editable_reference(reference)}
  %table.reference_table
    %tr
      %td.icons
        %a.icon.edit{:title => 'edit', :href => '#'}
          = image_tag 'edit_off.png', :alt => 'edit'
      %td.reference_item
        = render 'display', :reference => reference if !reference.new_record? && reference.errors.empty?
        - if user_can_edit?
          - publisher_string = ''
          = render 'edit', :reference => reference, :publisher_string => publisher_string
