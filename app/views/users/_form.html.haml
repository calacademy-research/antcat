=form_with model: user do |f|
  =render "shared/errors_for", resource: user

  .row.mb-4
    .medium-6
      =f.label :name
      =f.text_field :name, class: 'w-full'

      .mb-4

      =f.label :email
      =f.email_field :email, class: 'w-full'

      .mb-4

      =f.label :password
      =f.password_field :password, autocomplete: "new-password", class: 'w-full'

      .mb-4

      =f.label :author_id, "AntCat Author ID"
      =f.number_field :author_id

      .mb-4

      =f.check_box :superadmin
      =f.label :superadmin

      =f.check_box :editor
      =f.label :editor

      =f.check_box :helper
      =f.label :helper_editor

  .row.mb-4
    .medium-6
      =f.check_box :enable_email_notifications
      =f.label :enable_email_notifications

  .row
    .medium-6
      =f.check_box :locked
      =f.label :locked_account

      =f.check_box :deleted
      =f.label 'Soft-deleted'

  .row.mb-4
    .medium-6
      =f.check_box :hidden
      =f.label 'Hide from users list'

  .row
    .medium-6
      =f.button append_superadmin_icon("Save"), class: "btn-saves btn-md"
