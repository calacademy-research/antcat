- @title = 'Taxatry Index'

- content_for :head do
  = javascript_include_tag 'taxatry/index'
  = stylesheet_link_tag 'taxatry/index'

#browser
  .header
    #taxon_header
      - if @taxon.kind_of? Taxon
        %span.taxon_header
          = raw @taxon_header_name
        %span.taxon_status
          = status_labels[@taxon.status][:singular] if @taxon.invalid?
        .statistics
          = taxon_statistics @taxon
        - if @taxonomic_history
          .taxonomic_history
            = raw @taxonomic_history
    %hr

  .contents
    = render 'rank', :items => @subfamilies, :selected_item => @selected_subfamily, :header => 'Subfamilies', :q => params[:q], :search_type => params[:search_type], :show_none => true
    = render 'rank', :items => @genera, :selected_item => @selected_genus, :header => 'Genera', :q => params[:q], :search_type => params[:search_type], :show_none => false
    = render 'rank', :items => @species, :selected_item => @selected_species, :header => 'Species', :q => params[:q], :search_type => params[:search_type], :show_none => false
