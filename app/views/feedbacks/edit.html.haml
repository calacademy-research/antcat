-page_title "Edit ##{@feedback.id}"
-breadcrumb :edit_feedback, @feedback

.row
  .medium-12.columns
    =form_with(model: @feedback) do |f|
      =render "shared/errors_for", resource: @feedback

      .row.mb-4
        .medium-12.columns
          =f.label :comment
          =f.text_area :comment, rows: 10, maxlength: Feedback::COMMENT_MAX_LENGTH

      .row.mb-4
        .medium-12.columns
          =f.label :page do
            Page: https://www.antcat.org/...
          =f.text_field :page, placeholder: "Optional"

      .row
        .medium-12.columns
          =edit_summary_text_field_tag
          =f.button "Save", class: "btn-saves"
