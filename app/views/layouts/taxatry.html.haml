- content_for :head do
  = stylesheet_link_tag 'taxatry/taxatry'
  = javascript_include_tag 'taxatry/taxatry', 'taxatry/taxon_key'

- content_for :page_header do
  #navigation_bar
    = form_tag @current_path, :method => 'get', :id => 'search_form' do
      .actions.taxatry_view_selector
        = label_tag 'index_view', 'Index'
        = radio_button_tag 'view_selector', 'Index', controller.class.name =~ /Index/, :id => 'index_view', :path => index_taxatry_url(@taxon, :q => params['q'], :search_type => params[:search_type])
        = label_tag 'browser_view', 'Browser'
        = radio_button_tag 'view_selector', 'Browser', controller.class.name =~ /Browser/, :id => 'browser_view', :path => browser_taxatry_url(@taxon, :q => params['q'], :search_type => params[:search_type])

      .search
        Search for name
        = select_tag :search_type, options_for_select(['matching', 'beginning with', 'containing'], params[:search_type] || 'beginning with')
        = hidden_field_tag "id", params[:id]
        = text_field_tag "q", params[:q]
        = submit_tag  "Go"
        - if @search_results.present? && @search_results.size > 1
          = submit_tag "Clear"
        = @search_results_message
  = render 'shared/catalog_title'

- content_for :page_contents do
  = render 'taxatry/search_results', :search_results => @search_results, :taxon => @taxon, :path => :browser_taxatry_path
  = yield
  .clear
  = render 'taxatry/taxon_key'

= render :file => 'layouts/application'
