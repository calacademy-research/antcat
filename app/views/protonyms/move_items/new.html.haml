-page_title "Move items - select target"
-breadcrumb :move_protonym_items_select_target, @protonym

=form_with url: protonym_move_items_path, method: :get do |f|
  .row
    .medium-6.columns
      .callout
        %h6.font-bold Move items from...
        =@protonym.decorate.link_to_protonym

    .medium-6.columns
      .callout
        %h6.font-bold ...to
        =protonym_picker @to_protonym, name: 'to_protonym_id'
        .mb-4
        =f.button "Select...", class: "btn-default btn-md"

.row
  .medium-6.columns
    -if @protonym.history_items.empty?
      No history items.
    -else
      %table.table-striped
        %caption History items
        %tbody
          -@protonym.history_items.each do |history_item|
            %tr
              %td
                %small=Detax[history_item.to_taxt]
