- if search_results && search_results.size > 1
  %table#search_results
    - rows = make_catalog_search_results_columns search_results
    - rows.each do |row|
      %tr
        - row.each do |item|
          - if item
            %td
              - css_class = params[:id].to_s == item[:id].to_s ? 'selected' : nil
              - parameters = @page_parameters.dup
              - parameters.delete :id
              = link_to raw(item[:name]), send(path, item[:id], parameters), class: css_class

  %hr

