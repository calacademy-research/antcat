-if taxon.infrasubspecies.exists?
  %h6.font-bold.mt-8 Infrasubspecies
  %ul.compact-list.no-bullet.mb-8
    -TaxonQuery.new(taxon.infrasubspecies.order_by_name).with_common_includes.each do |infrasubspecies|
      %li
        %i=CatalogFormatter.link_to_taxon_with_label(infrasubspecies, infrasubspecies.name.short_name)
        =infrasubspecies.author_citation
