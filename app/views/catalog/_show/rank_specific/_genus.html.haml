-if taxon.valid_status? && taxon.subgenera.valid.exists?
  %h6.mt-8 Subgenera
  %ul.compact-list.no-bullet.mb-8
    -TaxonQuery.new(taxon.subgenera.valid.order_by_name).with_common_includes.each do |subgenus|
      %li
        =CatalogFormatter.link_to_taxon(subgenus)
        =subgenus.author_citation
