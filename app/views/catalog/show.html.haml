- @title = 'Catalog'

- content_for :head do
  = javascript_include_tag 'catalog', 'qtip'
  = javascript_include_tag 'ext/jquery.ui.selectmenu.js', 'ext/jquery.spinner.js'
  = stylesheet_link_tag 'ext/jquery.ui.selectmenu.css'

#catalog
  - can_add_genus = @tribe && @tribe != 'none'
  .content
    = render 'taxon', taxon: @taxon, user: current_user
    %hr

  .new_taxon_form
    = render 'catalog/taxon_form', tribe: @tribe if can_add_genus

  .index
    = render   'rank', rank: :subfamily,items: @subfamilies, selected_item: @subfamily, options: {show_none: 'none', hideable_child_name: 'tribes'}
    - unless @subfamily == 'none' || @parameters[:hide_tribes]
      = render 'rank', rank: :tribe,    items: @tribes,      selected_item: @tribe,     options: {show_none: 'none', hideable_name: 'tribes'}
    = render   'rank', rank: :genus,    items: @genera,      selected_item: @genus,     options: {hideable_child_name: 'subgenera'}
    - unless @parameters[:hide_subgenera]
      = render 'rank', rank: :subgenus, items: @subgenera,   selected_item: @subgenus,  options: {hideable_name: 'subgenera'}
    = render   'rank', rank: :species,  items: @specieses,   selected_item: @species,   options: {}

= render 'shared/qtip'
