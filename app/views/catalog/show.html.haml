- @title = "#{@taxon.name.epithet}"

- content_for :head do
  = javascript_include_tag 'catalog', 'qtip'
  = javascript_include_tag 'ext/jquery.ui.selectmenu.js', 'ext/jquery.spinner.js'
  = stylesheet_link_tag 'ext/jquery.ui.selectmenu.css'

#catalog
  - can_add_genus = @tribe && @tribe != 'none'
  .content
    - if current_user && session[:mode] == 'edit'
      - editing_buttons_content = editing_buttons @taxon, @parameters
      - if editing_buttons_content.present?
        #editing_buttons= editing_buttons_content
    = render 'catalog/taxon', taxon: @taxon
    %hr

  .new_taxon_form
    = render 'catalog/taxon_form', tribe: @tribe if can_add_genus

  .index
    = render   'rank', rank: :subfamily,items: @subfamilies,selected_item: @subfamily, parent: nil,       options: {can_show_unavailable: true, show_none: 'none', hideable_child_name: 'tribes'}
    - if session[:show_tribes] and @subfamily != 'none'
      = render 'rank', rank: :tribe,    items: @tribes,     selected_item: @tribe,     parent: @subfamily,options: {hideable_name: 'tribes', show_none: 'none'} 
    = render   'rank', rank: :genus,    items: @genera,     selected_item: @genus,     parent: nil,       options: {hideable_child_name: 'subgenera'}
    - if session[:show_subgenera]
      = render'rank',  rank: :subgenus, items: @subgenera,  selected_item: @subgenus,  parent: nil,       options: {hideable_name: 'subgenera'}
    = render  'rank',  rank: :species,  items: @specieses,  selected_item: @species,   parent: nil,       options: {}

= render 'shared/qtip'
