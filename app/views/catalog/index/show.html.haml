- @title = 'Catalog Index'

- content_for :head do
  = javascript_include_tag 'catalog/index'
  = javascript_include_tag 'ext/jquery.qtip-1.0.0-rc3.min'
  = stylesheet_link_tag 'catalog/index'

#catalog
  .content
    = raw CatalogFormatter.format_taxon @taxon, current_user
    %hr

  .index

    = render 'rank', :rank => :subfamily, :items => @subfamilies, :selected_item => @subfamily, :header => 'Subfamilies', :url_parameters => @url_parameters, :options => {:show_none => 'none', :hideable_child_name => 'tribes'}

    - unless @subfamily == 'none' || params[:hide_tribes]
      = render 'rank', :rank => :tribe, :items => @tribes, :selected_item => @selected_tribe, :header => 'Tribes', :url_parameters => @url_parameters, :options => {:show_none => 'no_tribe', :hideable_name => 'tribes'}

    = render 'rank', :rank => :genus, :items => @genera, :selected_item => @genus, :header => 'Genera', :url_parameters => @url_parameters, :options => {}

    = render 'rank', :rank => :species, :items => @species, :selected_item => @selected_species, :header => 'Species', :url_parameters => @url_parameters, :options => {}

= render 'shared/qtip'
