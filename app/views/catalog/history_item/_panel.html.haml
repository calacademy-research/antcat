-#Locals: item

- css_class = "history_item item_#{item.id}"
%div{class: css_class, 'data-id' => item.id}
  %table
    %tr
      %td.icons
        - if user_can_edit_catalog?
          %a.icon.edit{title: 'edit', href: '#'}
            = image_tag 'edit_off.png', alt: 'edit'
      %td.history_item_body
        = render 'catalog/history_item/display', item: item
        - if user_can_edit_catalog?
          = render 'catalog/history_item/edit', item: item
