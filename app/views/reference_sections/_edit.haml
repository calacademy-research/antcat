-#Locals: item

.edit.ui-widget-content
  - url = "/taxa/#{item.taxon.id}/reference_sections/#{item.id}"
  - method = item.persisted? ? 'put' : 'post'
  .nested_form{'data-action' => url, 'data-method' => method}
    = render 'shared/errors_for', resource: item

    %table
      %tr
        %td.label Title
        %td.title_taxt.taxt_editor= render 'taxt_editors/show', name: 'title_taxt', value: Taxt.to_editable(item.title_taxt)
      %tr
        %td.label Subtitle
        %td.title_taxt.taxt_editor= render 'taxt_editors/show', name: 'title_taxt', value: Taxt.to_editable(item.title_taxt)
      %tr
        %td.label References
        %td.references_taxt.taxt_editor= render 'taxt_editors/show', name: 'references_taxt',value: Taxt.to_editable(item.references_taxt)

    .buttons
      %button.submit.ui-priority-primary Save
      %button.cancel.ui-priority-secondary Cancel
      - if item.persisted?
        %button.delete.ui-priority-secondary Delete
