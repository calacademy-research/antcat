.row.center-text
  .small-12.medium-6.columns
    .row
      .small-4.columns
        %h6=image_tag 'logos/antcat_head_white_27x89.png', alt: 'AntCat'
        %ul.no-bullet
          %li=link_to 'About', page_path('about')
          %li=link_to 'List of users', users_path
          %li=link_to 'Contact us ', "mailto:#{Settings.contact_us_email_address}"
      .small-4.columns{style: "margin-top: 0.7rem"}
        %ul.no-bullet
          %li=link_to 'Activity feed', activities_path
          %li{style: 'white-space: nowrap'}
            =link_to page_path('contribute') do
              Contribute
              =antcat_icon "star"
              =antcat_icon "star"
              =antcat_icon "star"
          %li=link_to 'Random ant', catalog_random_path
          %li=link_to 'Feedback', new_feedback_path(page: current_page_for_feedback)
      .small-4.columns
        %ul.no-bullet{style: "margin-top: 1.3rem"}
          %li=link_to 'API', grape_swagger_rails_path
          %li=link_to 'Help pages', wiki_pages_path
          %li=external_link_to 'GitHub', "https://github.com/calacademy-research/antcat"

  .small-12.columns.medium-6.large-push-1{style: "margin-top: 0.4rem"}
    .row
      .small-6.medium-6.large-5.columns.large-offset-2
        =link_to 'https://www.calacademy.org/', target: '_blank', rel: 'noopener' do
          =image_tag 'logos/california_academy_of_sciences_white_80x213.png', alt: 'California Academy of Sciences'
      .small-6.medium-6.large-5.columns.smedium-push-2
        =link_to 'https://antweb.org/', target: '_blank', rel: 'noopener' do
          =image_tag 'logos/antweb_white_27x146.png', alt: 'AntWeb', style: "padding-top: 1.7rem"
