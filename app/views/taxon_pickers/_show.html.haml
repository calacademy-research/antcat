- url = '/taxon_pickers/lookup?picker=true'
- method = 'get'
%form#taxon_picker.antcat_taxon_picker.ui-corner-all.ui-widget-content.ui-widget{'data-action' => url, 'data-method' => method}
  %ul.error_messages
  .buttons
    .help Type the name, or type characters in the name then choose a taxon from the drop-down list
    = text_field_tag :taxon_name, @taxon_name
    = submit_tag 'OK', class: 'ui-priority-primary.submit'
    %button.ui-priority-secondary.cancel Cancel
