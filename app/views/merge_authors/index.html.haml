- @title = 'Merge Authors'

- content_for :head do
  = javascript_include_tag 'qtip', 'merge_authors'

- content_for :page_contents do
  - for panel in @panels
    = render 'panel', panels: @panels, panel: panel

  - if @authors.count >= 2 && user_is_editor?
    = render 'merge', panels: @panels, names: @names

= render 'shared/qtip'
