-if @references.blank?
  %p No results
-else
  %table.table.unstriped
    %tbody
      -@references.each do |reference|
        -label = reference.decorate.link_to_reference

        %tr.pickable-row{"data-picker-value" => "#{reference.id}", "data-picker-pickable" => "true"}
          %td.shrink
            %span.pickable-record-id=reference.id
          %td.shrink
            %span.pickable-outline
              =label
            %span.ml-8.text-sm pagination: #{reference.full_pagination}

            %br

            %span=reference.title

            %template{"data-picker-fake-input-label-template" => "true"}
              =label
